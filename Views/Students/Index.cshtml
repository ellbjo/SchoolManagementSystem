@model IEnumerable<SchoolManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Index</h1>

<div class="d-flex justify-content-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<form asp-action="Index" method="get">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label class="control-label">Class</label>
            <select name="classId" class="form-control" asp-items="ViewBag.ClassId as SelectList">
                <option value="">-- Select Class --</option>
            </select>
        </div>
        <div class="form-group col-md-2 mt-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
