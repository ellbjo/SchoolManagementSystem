@model IEnumerable<SchoolManagementSystem.Models.Class>

@{
    ViewData["Title"] = "Index";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
    }
    .table-container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>

<h1 class="text-center mb-4">Index</h1>

<div class="container mb-3">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>

<div class="container">
    <form asp-action="Index" method="get" class="mb-3 form-container">
        <div class="form-row align-items-end">
            <div class="form-group col-md-4">
        <label class="control-label">Class</label>
        <select name="classId" class="form-control" asp-items="ViewBag.ClassId as SelectList">
            <option value="">-- Select Class --</option>
        </select>
    </div>
            <div class="form-group col-md-2">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
    </div>
</form>

    <div class="table-container">
        <table class="table table-striped">
            <thead class="thead-dark">
        <tr>
                    <th>Name</th>
            <th>Students</th>
            <th>Teachers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <ul>
                        @foreach (var student in item.Students)
                        {
                            <li>Student: @student.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var subject in item.Subjects)
                        {
                                    <li>
                                        Teacher:
                                        @if (subject.Teacher != null)
                            {
                                            <span>@subject.Teacher.Name</span>
                            }
                            else
                            {
                                            <span>Not Found!</span>
                            }
                                        (Subject: @subject.Name)
                                    </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>
